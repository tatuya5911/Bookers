 <%=flash[:notice]%>



<%= render 'users/list', book:@book_new, user:@user %>

<h2>Books</h2>
<div class ="col-xs-9">
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 50,50, format:'jpeg', fallback: "no_image.jpg", :size =>'50x50' %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>