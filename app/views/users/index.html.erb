<%= render 'users/list', book:@book_new, user:@user %>


<div class="container">
<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>

 <tbody>
 	<% @users.each do |user| %>
      <tr>
      	<td><%= attachment_image_tag user, :profile_image, :fill, 100,100, format:'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>