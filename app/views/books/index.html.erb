
<%= render 'users/list', book:@book_new, user:@user %>

<div class="container">
<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

 <tbody>
 	<% @books.each do |book| %>
      <tr>
      	<td><%= attachment_image_tag @user, :profile_image, :fill, 100,100, format:'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>