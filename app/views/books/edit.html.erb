<h1>Editing Book</h1>
<%= flash[:notice] %>
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <h4><%= f.submit 'Update Book' %></h4>
<% end %>

<thead>
<tr>
<th><%= link_to "Show", book_path %>
</th>
<th>|</th>
<th>
	<%= link_to "Back", books_path %>
</th>
</tr>
</thead>