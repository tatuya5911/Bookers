<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bookers</title>

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p class="navbar-brand">Bookers</p>
    </div>
    <div class="collapse navbar-collapse" id="navbarEexample1">
      <ul class="nav navbar-nav">
      <% if user_signed_in? %>
      <li class="">
        <%= link_to user_path(current_user.id) do %>
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home
        <% end %>
      </li>
      <li class="">
        <%= link_to users_path do %>
         <span class="glyphicon glyphicon-user" aria-hidden="true"></span>User
        <% end %>
      </li>
      <li class="">
        <%= link_to books_path do %>
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books
        <% end %>
      </li>
      <li class="">
        <%= link_to destroy_user_session_path, method: :delete do %>
         <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>logoin
        <% end %>
      </li>
    <% else %>
    <li class="">
        <%= link_to "/" do %>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home
        <% end %>
      </li>
      <li class="">
        <%= link_to "/about" do %>
        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>About
        <% end %>
      </li>
      <li class="">
        <%= link_to new_user_registration_path do %>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> sign up
        <% end %>
      </li>
      <li class="">
        <%= link_to new_user_session_path do %>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>logoin
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
</div>
</nav>
    <%= yield %>
    <footer>
  <p>CopyRight Infratop.inc</p>
</footer>
  </body>
</html>
