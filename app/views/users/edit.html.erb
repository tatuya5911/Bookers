<h1>User info</h1>
<%= flash[:notice] %>
<%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h4>Name</h4>
<%= f.text_field :name %>
<h4>Image</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
<h4>Introduction</h4>
<%= f.text_area :introduction %>

<%= f.submit "Update User" %>
<% end %>
